# Based on LLVM style for C language projects
BasedOnStyle: LLVM

# Customized settings (only non-default values)

# Indentation settings
IndentWidth: 4           # Use 4 spaces for indentation
TabWidth: 4              # Set tab width to 4 characters

# Line settings
BreakStringLiterals: false  # Don't break long string literals across multiple lines
SeparateDefinitionBlocks: Always  # Insert an empty line between definition blocks

# Function settings
AllowShortFunctionsOnASingleLine: None  # Don't allow short functions on a single line

# Sorting include settings
IncludeBlocks: Regroup  # Merge multiple include blocks together and sort as one. Then split into groups based on category priority
